
# Environment variables for the Weekly Calendar App

# Database connection
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/calendar?schema=public"

# For Docker, use:
DATABASE_URL_DOCKER="postgresql://postgres:postgres@db:5432/calendar?schema=public"

# Authentication
JWT_SECRET=calendar_app_secret_key_for_development
JWT_EXPIRES_IN=7d

# Server configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=info
